{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/build.sh",
                "d",
                "${workspaceFolder}",
                "${file}",
                "debug.exe"
            ],
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release build with output name",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/build.sh",
                "r",
                "${workspaceFolder}",
                "${file}",
                "${input:outFileName}"
            ],
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "release build",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/build.sh",
                "r",
                "${workspaceFolder}",
                "${file}",
                "release.exe"
            ],
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "copy c++ template",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/tpl/template",
                "${file}"
            ],
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": []
        },
        {
            "label": "update template",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/update.sh",
                "${workspaceFolder}"
            ],
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": []
        },
        {
            "label": "make ABC directory",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/makefiles.sh",
                "${workspaceFolder}",
                "src/abc/${input:contestNum}",
                "'a b c d e f g'"
            ],
            "problemMatcher": []
        },
        {
            "label": "make directory",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/makefiles.sh",
                "${workspaceFolder}",
                "src/${input:contestType}/${input:contestNum}",
                "'${input:fileNames}'"
            ],
            "problemMatcher": []
        },
        {
            "label": "make file from url",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/makefile.sh",
                "${workspaceFolder}",
                "${input:url}"
            ],
            "problemMatcher": []
        },
        {
            "label": "compare outputs",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/compare.sh",
                "${workspaceFolder}",
                "${input:exeFile1}",
                "${input:exeFile2}"
            ],
            "problemMatcher": []
        },
        {
            "label": "check outputs",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/shell/check.sh",
                "${workspaceFolder}",
                "${input:exeFile1}",
                "${input:exeFile2}"
            ],
            "problemMatcher": []
        },
        {
            "label": "copy leetcode template",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/tpl/leetcode.cpp",
                "${file}"
            ],
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": []
        },
        {
            "label": "make leetcode file",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/tpl/leetcode.cpp",
                "src/leetcode/${input:fileName}.cpp",
                "&&",
                "code",
                "src/leetcode/${input:fileName}.cpp",
            ],
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "contestType",
            "description": "コンテストの種類",
            "type": "pickString",
            "options": [
                "arc",
                "agc",
                "abc"
            ],
            "default": "arc"
        },
        {
            "id": "contestNum",
            "description": "コンテスト番号",
            "type": "promptString"
        },
        {
            "id": "fileName",
            "description": "ファイル名",
            "type": "promptString"
        },
        {
            "id": "directoryName",
            "description": "ディレクトリ",
            "default": "src/",
            "type": "promptString"
        },
        {
            "id": "fileNames",
            "description": "作成するファイル名（拡張子なし，スペース区切り）",
            "default": "a b c d e f",
            "type": "promptString"
        },
        {
            "id": "url",
            "description": "問題 URL / ID",
            "type": "promptString"
        },
        {
            "id": "outFileName",
            "description": "出力ファイルの名前",
            "default": "model.exe",
            "type": "promptString"
        },
        {
            "id": "exeFile1",
            "description": "比較対象の実行ファイル (1)",
            "default": "d",
            "type": "promptString"
        },
        {
            "id": "exeFile2",
            "description": "比較対象の実行ファイル (2)",
            "default": "m",
            "type": "promptString"
        }
    ]
}