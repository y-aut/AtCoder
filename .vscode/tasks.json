{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++17",
                "-Wall",
                "-Wextra",
                "-pthread",
                "-g",
                "-O1",
                "-DONLINE_JUDGE",
                "-fno-inline",
                "-ftrapv",
                "-I/opt/boost/gcc/include",
                "-L/opt/boost/gcc/lib",
                "-I${workspaceFolder}/ac-library",
                "-o",
                "'${workspaceFolder}/problem.exe'",
                "'${file}'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++17",
                "-g",
                "-O3",
                "-DONLINE_JUDGE",
                "-I/opt/boost/gcc/include",
                "-L/opt/boost/gcc/lib",
                "-I${workspaceFolder}/ac-library",
                "-o",
                "'${workspaceFolder}/problem.exe'",
                "'${file}'"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "copy c++ template",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/tpl/template.cpp",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "make ABC directory",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/shell/makefiles.sh",
                "${workspaceFolder}",
                "src/abc/${input:contestNum}",
                "\"a b c d e f g x\""
            ],
            "problemMatcher": []
        },
        {
            "label": "make directory",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/shell/makefiles.sh",
                "${workspaceFolder}",
                "${input:directoryName}",
                "\"${input:fileNames}\""
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "contestNum",
            "description": "コンテスト番号",
            "type": "promptString"
        },
        {
            "id": "directoryName",
            "description": "ディレクトリ",
            "default": "src/",
            "type": "promptString"
        },
        {
            "id": "fileNames",
            "description": "作成するファイル名（拡張子なし，スペース区切り）",
            "default": "a b c d e f",
            "type": "promptString"
        }
    ]
}