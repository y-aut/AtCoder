{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/shell/build.sh",
                "d",
                "${workspaceFolder}",
                "${file}",
                "debug.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug build with output name",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/shell/build.sh",
                "d",
                "${workspaceFolder}",
                "${file}",
                "${input:outFileName}"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "release build",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/shell/build.sh",
                "r",
                "${workspaceFolder}",
                "${file}",
                "release.exe"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "copy c++ template",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/tpl/template.cpp",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "make ABC directory",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/shell/makefiles.sh",
                "${workspaceFolder}",
                "src/abc/${input:contestNum}",
                "'a b c d e f g x'"
            ],
            "problemMatcher": []
        },
        {
            "label": "make directory",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/shell/makefiles.sh",
                "${workspaceFolder}",
                "${input:directoryName}",
                "'${input:fileNames}'"
            ],
            "problemMatcher": []
        },
        {
            "label": "compare outputs",
            "type": "shell",
            "command": "source",
            "args": [
                "${workspaceFolder}/shell/compare.sh",
                "${workspaceFolder}",
                "${input:exeFile1}",
                "${input:exeFile2}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "contestNum",
            "description": "コンテスト番号",
            "type": "promptString"
        },
        {
            "id": "directoryName",
            "description": "ディレクトリ",
            "default": "src/",
            "type": "promptString"
        },
        {
            "id": "fileNames",
            "description": "作成するファイル名（拡張子なし，スペース区切り）",
            "default": "a b c d e f",
            "type": "promptString"
        },
        {
            "id": "outFileName",
            "description": "出力ファイルの名前",
            "default": "model.exe",
            "type": "promptString"
        },
        {
            "id": "exeFile1",
            "description": "比較対象の実行ファイル (1)",
            "default": "release.exe",
            "type": "promptString"
        },
        {
            "id": "exeFile2",
            "description": "比較対象の実行ファイル (2)",
            "default": "model.exe",
            "type": "promptString"
        }
    ]
}